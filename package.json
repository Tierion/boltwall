    "express": "4.17.1",
    "ln-service": "https://github.com/bucko13/ln-service#path",
    "macaroons.js": "0.3.8",
    "opennode": "1.1.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@now/node": "0.12.1",
    "@types/chai": "^4.2.5",
    "@types/cookie-session": "2.0.37",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/sinon": "^7.5.1",
