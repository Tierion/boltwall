{
  "name": "boltwall",
  "version": "4.2.0",
  "description": "A Nodejs + Express middleware for adding a lightning-based paywall to API routes w/ macaroons for flexible delegation.",
  "main": "dist/index.js",
  "repository": "git@github.com:Tierion/boltwall.git",
  "author": "Buck Perley <bucko.perley@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "build": "tsc --project src/tsconfig.json --outDir dist/",
    "lint": "eslint ./src/**/*.ts --quiet",
    "test": "mocha -r ts-node/register tests/**/*-test.ts",
    "test:watch": "mocha -r ts-node/register --recursive --reporter spec --watch --watch-extensions ts tests/**/*-test.ts",
    "prepare": "npm run build",
    "docs": "./docs.sh",
    "prepublishOnly": "npm run docs"
  },
  "dependencies": {
    "compose-middleware": "5.0.1",
    "cookie-session": "1.3.3",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "ln-service": "https://github.com/bucko13/ln-service#path",
    "macaroons.js": "0.3.8",
    "opennode": "1.1.1"
  },
  "devDependencies": {
    "@now/node": "0.12.1",
    "@types/chai": "^4.2.5",
    "@types/cookie-session": "2.0.37",
    "@types/cors": "2.8.5",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "body-parser": "1.19.0",
    "chai": "^4.2.0",
    "cors": "2.8.5",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "mocha": "^6.2.2",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.3",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5"
  }
}
